<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/secondaryTextDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="FlatButton">
        <item name="colorControlHighlight">#6533B5E5</item>
    </style>

    <style name="FakeCard"/>

</resources>
