<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/photo_viewer_item_margin"
    android:layout_width="148dp"
    android:layout_height="148dp">

    <com.thathustudio.spage.view.SquareImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imvPhoto"/>

    <android.support.v7.widget.AppCompatImageButton
        android:layout_height="@dimen/activity_posting_delete_photo"
        android:layout_width="@dimen/activity_posting_delete_photo"
        android:scaleType="fitXY"
        android:background="#b2b2b2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_white_24dp"
        android:id="@+id/btnClose" />
</RelativeLayout>