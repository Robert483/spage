<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thathustudio.spage.activities.ResultActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.percent.PercentFrameLayout
            android:id="@+id/arpgr_result"
            android:paddingTop="@dimen/spacing"
            app:layout_aspectRatio="133%"
            app:layout_widthPercent="100%">

            <com.thathustudio.spage.widgets.ArcProgressBar
                android:layout_gravity="center"
                app:arc_angle="245"
                app:arc_bottom_text_color="@color/secondaryTextDark"
                app:arc_bottom_text_size="56sp"
                app:arc_finished_color_end="#00E676"
                app:arc_finished_color_start="#D50000"
                app:arc_progress_text_color="@color/primaryTextDark"
                app:arc_stroke_width="40dp"
                app:arc_suffix_text=""
                app:arc_text_size="24sp"
                app:arc_unfinished_color="#E0E0E0"
                app:layout_aspectRatio="100%"
                app:layout_heightPercent="100%"/>

        </android.support.percent.PercentFrameLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arpgr_result"
            android:nestedScrollingEnabled="false"
            tools:ignore="UnusedAttribute"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.v4.widget.NestedScrollView>

